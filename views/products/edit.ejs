<%- include('../partials/header') %> 
<%- include('../partials/navbar') %> 
    <div class="container mt-4">
        <section class="text-center">
          <%- include('../partials/flash') %> 
          <h4 class="display-4 mt-3">Edit Product</h4>
        </section>
        <div class="row col-lg-8 center-class">
            <form class="needs-validation" method="POST" action="/products/<%= prod._id %>?_method=PATCH" novalidate>
                <div class="mb-3">
                  <label for="name" class="form-label">Product Name</label>
                  <input type="text" class="form-control" id="name" name="name" value="<%= prod.name %>" disabled>
                </div>
                <div class="mb-3">
                  <label for="img" class="form-label">Image URL</label>
                  <input type="url" class="form-control" id="img" name="img" value="<%= prod.img %>" required>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Product Price</label>
                    <input type="text" class="form-control" id="price" name="price" value="<%= prod.price %>" required>
                  </div>
                  <div class="mb-3">
                    <label for="desc" class="form-label">Product Description</label>
                    <textarea name="desc" class="form-control" id="desc" cols="30" rows="5" required><%= prod.desc %></textarea>
                  </div>
                <button type="submit" class="btn btn-outline-primary">Update</button>
              </form>
        </div>
    </div>
<%- include('../partials/footer') %> 