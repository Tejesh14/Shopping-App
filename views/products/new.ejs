<%- include('../partials/header') %> 
<%- include('../partials/navbar') %> 
    <div class="container mt-4">
        <section class="text-center">
            <h4 class="display-4 mt-3">New Product</h4>
        </section>
        <div class="row col-lg-8 center-class">
            <form method="POST" action="/products" class="needs-validation" novalidate>
                <div class="mb-3">
                  <label for="name" class="form-label">Product Name</label>
                  <input type="text" class="form-control" id="name" name="name" placeholder="Enter Product" required>
                </div>
                <div class="mb-3">
                  <label for="img" class="form-label">Image URL</label>
                  <input type="url" class="form-control" id="img" name="img" placeholder="Enter URL" required>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Product Price</label>
                    <input type="number" class="form-control" id="price" name="price" placeholder="Enter Price" required>
                  </div>
                  <div class="mb-3">
                    <label for="desc" class="form-label">Product Description</label>
                    <textarea name="desc" class="form-control" id="desc" cols="30" rows="5" required></textarea>
                  </div>
                <button type="submit" class="btn btn-outline-primary">Submit</button>
              </form>
        </div>
    </div>
<%- include('../partials/footer') %> 